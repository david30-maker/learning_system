<header class="hidden sm:flex w-full justify-center items-center text-gray-700 py-6 px-5">
  <div class="container ma-auto flex justify-between items-center"> 
    <div class="flex">
      <div>
        <%= link_to "Courses", root_path, class: "hover:bg-amaranth-500 hover:text-white-50 rounded py-2 px-4" %>
      </div>
    </div>
    
    <div>
      <%= link_to root_path do %>
        <%= image_tag "apple.png", class: "h-12" %>
      <% end %>
    </div>
    
    <div class="flex">
      <% if user_signed_in? %>
        <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "hover:bg-amaranth-500 hover:text-white-50 rounded py-2 px-4" %>
        <%= link_to icon('fa-solid', 'user-circle'), edit_user_registration_path, class: "hover:bg-amaranth-500 hover:text-white-50 rounded py-2 px-4 text-center" %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class: "hover:bg-amaranth-500 hover:text-white-50 rounded py-2 px-4" %>
      <% end %>
    </div>
  </div>
</header>
